<!DOCTYPE html>
<html>
    <head>
        <title>실습19번문제 for문</title>
    </head>
    <body>
        <script type="text/javascript">
            var i = 0;
            var sum = 0;

            for (i=1; i<=1000; i++)
            {
                if(i% 3==0)
                {
                    sum = sum + i;
                }
            }
            document.write(sum);
        </script>
    </body>
</html>


<!DOCTYPE html>
<html>
    <head>
        <title>실습19번문제 while문</title>
    </head>
    <body>
        <script type="text/javascript">
            var i = 0;
            var sum = 0;

            while(i<=1000)
            {
                i++;
                if(i%3==0)
                {
                    sum = sum + i;
                }
            }
            document.write(sum);
        </script>
    </body>
</html>




<!DOCTYPE html>
<html>
    <head>
        <title>실습19번문제 do-while문</title>
    </head>
    <body>
        <script type="text/javascript">
            var i = 0;
            var sum = 0;

            do
            {
                i++;
                if(i%3==0)
                {
                    sum = sum + i;
                }
            }
            while(i<=1000);
            document.write(sum);
        </script>
    </body>
</html>
