    <head>
        <title>실습16번문제</title>
        <script type="text/javascript">
            
            function increase(btn) {   
                // var buttons=document.getElementById("button_area").getElementsByTagName("input"); 
                // buttons[0].value=parseInt(buttons[0].value)+1; 
                // buttons[1].value=parseInt(buttons[1].value)+1; 
                // buttons[2].value=parseInt(buttons[2].value)+1;
                btn.value=parseInt(btn.value)+1;
            }
        </script>
    </head>
    <body>
        <div id="button_area">
            <input type="button" value="1" onclick="increase(this);"/>
            <input type="button" value="2" onclick="increase(this);"/>
            <input type="button" value="3" onclick="increase(this);"/>
        </div>
